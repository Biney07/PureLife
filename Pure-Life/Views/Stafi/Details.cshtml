                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
           
            <div class="col-xl-10">
                <div class="card card-custom gutter-b">
                    <div class="card-header card-header-tabs-line">
                        <div class="card-toolbar">
                            <ul class="nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-bold nav-tabs-line-3x" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#kt_apps_contacts_view_tab_1">
                                        <span class="nav-icon">

                                           <i class="fa-solid fa-user" style="color: #3b9de8;"></i>
                                            
                                        </span>
                                        <span class="nav-text">
                                            Personale
                                        </span>
                                    </a>
                                </li>
                                <li class="nav-item mr-3">
                                    <a class="nav-link" data-toggle="tab" href="#kt_apps_contacts_view_tab_2">
                                        <span class="nav-icon mr-2">
                                            <span class="nav-icon">
                                                <!--begin::Svg Icon | path:~/media/svg/icons/Communication/Chat-check.svg-->
                                                <i class="fa-solid fa-address-book" style="color: #3b9de8;"></i>
                                            </span>
                                        </span>
                                        <span class="nav-text">
                                            Contact Details
                                        </span>
                                    </a>
                                </li>
                             
                             
                            </ul>
                        </div>
                    </div>
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body px-0">
                        <div class="tab-content pt-5">
                            <!--begin::Tab Content-->
                            <div class="tab-pane" id="kt_apps_contacts_view_tab_1" role="tabpanel">
                                <form class="form">
                                    

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Emri</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.Emri />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Mbiemri</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.Mbiemri />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Numri Leternjoftimit</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.NrLeternjoftimit />
                                          
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Data e lindjes</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.DataLindjes/>

                                        </div>
                                    </div>

                             
                          
                                

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Gjinia</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                               
                                                @if (Model.Gjinia == "M")
                                                {
                                                    <input type="text" class="form-control form-control-lg form-control-solid" value="Mashkull" />
                                                }
                                                else
                                                {
                                                    <input type="text" class="form-control form-control-lg form-control-solid" value="Femer" placeholder="Phone" />

                                                }

                                            </div>
                                           
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Email Address</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                <input type="text" class="form-control form-control-lg form-control-solid" value="@Model.Email"  />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Shteti</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <input type="text" class="form-control form-control-lg form-control-solid" value="@Model.Shteti.Emri" />
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Qyteti</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <input type="text" class="form-control form-control-lg form-control-solid" value="@Model.Qyteti" />
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Nacionaliteti</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <input type="text" class="form-control form-control-lg form-control-solid" value="@Model.Nacionaliteti.Emri" />

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!--end::Tab Content-->
                            <!--begin::Tab Content-->
                            <div class="tab-pane" id="kt_apps_contacts_view_tab_2" role="tabpanel">
                                <form class="form">
                                    

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Email zyrtar</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.EmailZyrtar />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Numri Licenses</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.NrLincences />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Specializimi</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input class="form-control form-control-lg form-control-solid" type="text" value=@Model.Lemia.Emri />
                                 
                                        </div>
                                    </div>

                                  


                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Roli</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                            
                                                <input type="text" class="form-control form-control-lg form-control-solid" value=@Model.Rolet.Emri />
                                            </div>
                                          
                                        </div>
                                    </div>

                                   
                                </form>
                            </div>
                        
                
                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>