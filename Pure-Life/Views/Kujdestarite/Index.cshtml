@model IEnumerable<Pure_Life.Models.Kujdestarite>

@{
	ViewData["Title"] = "Index";
}

<div class="card card-custom">
	<div class="card-header flex-wrap py-5">
		<div class="card-title">
			<h3 class="card-label">
				Kujdestarite

			</h3>
		</div>
		<div class="card-toolbar">
			<!--begin::Dropdown-->
			<!--end::Dropdown-->
			<!--begin::Button-->
			<a asp-action="Create" class="btn btn-primary font-weight-bolder">
				<span class="svg-icon svg-icon-md">
					<!--begin::Svg Icon | path:~/media/svg/icons/Design/Flatten.svg-->
					<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
						<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
							<rect x="0" y="0" width="24" height="24" />
							<circle fill="#000000" cx="9" cy="15" r="6" />
							<path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
						</g>
					</svg><!--end::Svg Icon-->
				</span>	Krijo
			</a>
			<!--end::Button-->
		</div>
	</div>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Stafi.Emri) @Html.DisplayNameFor(model => model.Stafi.Mbiemri)
				</th>

				<th>
					@Html.DisplayNameFor(model => model.Data)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Reparti)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Kati)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.InsertedFrom)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.InsertedDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifiedDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifiedFrom)
				</th>

				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				
					<tr class="@GetRowClass(item.Data)">
						<td class="align-middle">
						@Html.DisplayFor(modelItem => item.Stafi.Emri) @Html.DisplayFor(modelItem => item.Stafi.Mbiemri)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => item.Data)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => item.Reparti)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => item.Kati)
					</td>
				      <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.InsertedFrom)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.InsertedDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ModifiedFrom)
                    </td>
					<td nowrap="" class="align-middle">



						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon" title="Edit details">
							<i class="la la-edit" style="color:white;"></i>
						</a>
						<a data-id="@item.Id" data-toggle="modal" data-target="#delete-modal" class="btn btn-sm btn-icon delete-button" title="Delete">
							<i class="la la-trash" style="color:white;"></i>
						</a>
					</td>
				</tr>
				
			}
		</tbody>
	</table>
		@Html.Partial("Delete")
	@section Scripts {
  <script>
    $(function() {
      $('.delete-button').click(function() {
        var id = $(this).data('id');
        $('#delete-form').attr('action', '/Kujdestarite/Delete/' + id);
      });
    });
  </script>
}
	@functions {
		private string GetRowClass(DateTime date)
		{
			if (date.Date == DateTime.Today)
			{
				return "bg-primary";
			}
			else if (date.Date > DateTime.Today)
			{
				return "bg-warning";
			}
			else
			{
				return "";
			}
		}
}