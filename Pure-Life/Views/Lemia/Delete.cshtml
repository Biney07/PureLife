@model Pure_Life.Models.Lemia

@{
    ViewData["Title"] = "Delete";
}
<style>
    #myModal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

</style>
<div id="myModal" class="modal fade show" style="display:block;">
    <div class="modal-dialog modal-confirm modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body">
                <p>A jeni te sigurt qe doni te fshini "<b>@Model.Emri</b>"? Ky proces nuk mund te kthehet prapa dhe te gjithe rekordet qe permbajne kete nacionalitetet do te fshihen</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myModal').modal('show');
    });
</script>