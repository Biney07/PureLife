@using Pure_Life.ViewModel.Sherbimet;
@model AddSherbimetViewModel

@{
	ViewData["Title"] = "Create";
}


<div class="card card-custom">
	<div class="card-header">
		<h3 class="card-title">
			Shto sherbimet
		</h3>
	</div>
	<!--begin::Form-->
	<form asp-action="Create" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="card-body">


			<div class="form-group row">
				<label class="col-2 col-form-label" asp-for="Emri" class="control-label"></label>
				<div class="col-10">
					<input class="form-control" type="text" id="example-search-input" asp-for="Emri" class="form-control" />
					<span asp-validation-for="Emri" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-2 col-form-label" asp-for="Pershkrimi" class="control-label"></label>
				<div class="col-10">
					<textarea class="form-control" type="text" id="example-search-input" asp-for="Pershkrimi" class="form-control"></textarea>
					<span asp-validation-for="Pershkrimi" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group row">
			<label class="col-2 col-form-label" asp-for="Cmimi" class="control-label"></label>
			<div class="col-10">
					<input class="form-control" type="text" id="example-search-input" asp-for="Cmimi" class="form-control" />
					<span asp-validation-for="Cmimi" class="text-danger"></span>
			</div>
		</div>
			<div class="form-group row">
				<label class="col-2 col-form-label">Lemia</label>
				<div class="col-lg-4 col-md-9 col-sm-12">
					<select asp-for="LemiaId" class="form-control">
						<option value="">Choose</option>
						@foreach (var item in ViewBag.LemiaId)
						{
							<option value="@item.Value">@item.Text</option>
						}
					</select>
				</div>
			</div>

		<div class="card-footer">
			<div class="row">
				<div class="col-2">
				</div>
				<div class="col-10">
					<div class="form-group" style="display:flex;flex-direction:row;justify-content:end;">
						<input type="submit" value="Create" class="btn btn-primary me-4" />
						<a asp-action="Index" class="btn btn-secondary">Cancel</a>
					</div>

				</div>
			</div>
		</div>
	</form>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
