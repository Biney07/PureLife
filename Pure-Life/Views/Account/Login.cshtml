@using Pure_Life.ViewModels;
@model LoginViewModel
<style>
	.divider:after,
	.divider:before {
		content: "";
		flex: 1;
		height: 1px;
		background: #eee;
	}</style>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/purelifeLOGO.png" style="margin-left:10%;width:45%;height:auto;"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" asp-for="EmailAddress" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="EmailAddress">Email address</label><br />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="Password">Password</label><br />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                 

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

                    

                </form>
            </div>
        </div>
    </div>
</section>